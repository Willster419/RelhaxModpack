<local:RelhaxWindow x:Class="RelhaxModpack.Windows.DeleteOldCache"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RelhaxModpack.Windows"
        mc:Ignorable="d"
        Loaded="Grid_Loaded"
        Title="DeleteOldCache" Height="480" Width="600" Icon="/RelhaxModpack;component/Resources/modpack_icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Button Content="No" Tag="DeleteOldFilesNo" x:Name="DeleteOldFilesNo" HorizontalAlignment="Left" Margin="10,0,0,5" Grid.Row="2" VerticalAlignment="Bottom" Width="75" Click="OnNoButtonClick"/>
        <Button Content="Yes" Tag="DeleteOldFilesYes" x:Name="DeleteOldFilesYes" HorizontalAlignment="Right" Margin="0,0,10,5" Grid.Row="2" VerticalAlignment="Bottom" Width="75" Click="OnYesButtonClick"/>
        <TextBlock Tag="DeleteOldFilesHeader" x:Name="DeleteOldFilesHeader" HorizontalAlignment="Stretch" Margin="10,10,10,10" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Stretch" />

    </Grid>
</local:RelhaxWindow>
