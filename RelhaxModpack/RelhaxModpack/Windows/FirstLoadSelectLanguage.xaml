<local:RelhaxWindow x:Class="RelhaxModpack.Windows.FirstLoadSelectLanguage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RelhaxModpack.Windows"
        mc:Ignorable="d"
        Title="Language Selection" Height="200" Width="400" ResizeMode="NoResize" Loaded="RelhaxWindow_Loaded"
        LocalizeWindow="True" ApplyToolTips="False">
    <Window.Resources>
        <Style TargetType="Grid" BasedOn="{StaticResource DarkThemeGrid}"/>
    </Window.Resources>
    <Grid>
        <TextBlock HorizontalAlignment="Stretch" Margin="10,10,10,0" TextWrapping="Wrap" Text="Please select your language"
                   VerticalAlignment="Top" x:Name="SelectLanguageHeader"/>
        <StackPanel HorizontalAlignment="Stretch" Margin="10,31,10,35" VerticalAlignment="Stretch" x:Name="SelectLanguagesStackPanel"/>
        <Button Content="Continue" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75"
                x:Name="SelectLanguagesContinueButton" Click="SelectLanguagesContinueButton_Click"/>
    </Grid>
</local:RelhaxWindow>
