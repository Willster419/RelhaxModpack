<local:RelhaxWindow x:Class="RelhaxModpack.Windows.VersionInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RelhaxModpack.Windows"
        mc:Ignorable="d"
        Title="VersionInfo" Height="300" Width="500" MinHeight="300" MinWidth="500" Icon="/RelhaxModpack;component/Resources/modpack_icon.ico">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="New Version Available" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Right" Height="182" Margin="0,0,10,56" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="472"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,10" TextWrapping="Wrap" Text="If you are having problems updating, please" VerticalAlignment="Bottom"/>
        <TextBlock HorizontalAlignment="Left" Margin="247,0,0,10" TextWrapping="Wrap" VerticalAlignment="Bottom">
            <Hyperlink x:Name="ManualUpdateLink">Click Here</Hyperlink>
        </TextBlock>
        <Button Content="No" HorizontalAlignment="Left" Margin="10,0,0,31" VerticalAlignment="Bottom" Width="75"/>
        <Button Content="Yes" HorizontalAlignment="Right" Margin="0,0,10,31" VerticalAlignment="Bottom" Width="75"/>
    </Grid>
</local:RelhaxWindow>
